
@{
    ViewBag.Title = "Index";
}

<h3>Lista de Veículos</h3>

<div class="row mb-3">
    <div class="col-12">
        <a href="/veiculo/cadastro" class="btn btn-primary float-right"><i class="fas fa-plus"></i> Novo Veículo</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Modelo</th>
            <th>Preço</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Modelo</th>
            <th>Preço</th>
            <th>Ação</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (Model.Veiculo veiculo in ViewBag.Veiculos)
        {
            <tr>
                <td>@veiculo.Id</td>
                <td>@veiculo.categoria.Nome</td>
                <td>@veiculo.Modelo</td>
                <td>@veiculo.Valor</td>
                <td></td>
           
            </tr>
        }
    </tbody>
</table>


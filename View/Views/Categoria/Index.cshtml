
@{
    ViewBag.Title = "Index";
}

<h3>Lista de categoriads</h3>

<div class="row">
    <div class="col-12">
        <a href="/categoria/cadastro" class="btn btn-primary float-right">
            <i class="fas fa-plus"></i> Nova Categoria</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td>Código</td>
            <td>Nome</td>
            <td>Ação</td>
        </tr>
    </tfoot>
    <tbody>
        @foreach(Model.Categoria categoria in ViewBag.Categorias)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
            </tr>
        }
    </tbody>
</table>

